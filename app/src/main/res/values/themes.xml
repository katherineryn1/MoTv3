<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Motv3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text color. -->
        <!-- Text Color -->
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="CardViewTheme" parent="Widget.MaterialComponents.CardView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="strokeColor">@color/dark_blue</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextLargeBold">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextItalic">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/raleway_bold_italic</item>
    </style>

    <style name="DetailLabel">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>
</resources>